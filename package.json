{
  "name": "quadlet-lsp",
  "displayName": "Podman Quadlet languge server",
  "description": "Language server for Podman Quadlet",
  "publisher": "onlyati",
  "repository": {
    "type": "git",
    "url": "https://github.com/onlyati/quadlet-lsp-vscode-extension"
  },
  "files": [
    "out",
    "bin",
    "syntaxes",
    "language-configuration.json"
  ],
  "version": "0.0.6",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "os": [
    "win32",
    "linux",
    "darwin"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "activationEvents": [
    "onLanguage:quadlet"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "quadlet",
        "aliases": [
          "quadlet"
        ],
        "extensions": [
          ".container",
          ".volume",
          ".image",
          ".network",
          ".kube",
          ".build",
          ".pod"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "quadlet",
        "scopeName": "source.ini",
        "path": "./syntaxes/ini.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "pullAll",
        "title": "Quadlet: Pull All"
      },
      {
        "command": "listJobs",
        "title": "Quadlet: List activities"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/unzipper": "^0.10.11",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "tar": "^7.4.3",
    "unzipper": "^0.12.3",
    "vscode-languageclient": "^9.0.1"
  }
}
